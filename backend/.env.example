# ===== APPLICATION SETTINGS =====
APP_NAME=ReactCRM API
VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# ===== DATABASE SETTINGS =====
DATABASE_URL=postgresql://user:password@localhost:5432/react_crm_dev

# ===== SECURITY SETTINGS =====
SECRET_KEY=your_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# ===== CORS SETTINGS =====
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://react.ecbtx.com

# ===== RINGCENTRAL INTEGRATION =====
RINGCENTRAL_CLIENT_ID=your_ringcentral_client_id
RINGCENTRAL_CLIENT_SECRET=your_ringcentral_client_secret
RINGCENTRAL_SERVER_URL=https://platform.ringcentral.com
RINGCENTRAL_REDIRECT_URI=https://react.ecbtx.com/oauth/ringcentral/callback
RINGCENTRAL_WEBHOOK_SECRET=your_webhook_secret_key
RINGCENTRAL_WEBHOOK_URL=https://react-crm-api-production.up.railway.app/api/v2/webhooks/ringcentral

# ===== AI SERVICES =====
OPENAI_API_KEY=your_openai_api_key
WHISPER_MODEL=gpt-4o-transcribe
GPT_MODEL=gpt-4o-mini
GPT_ANALYSIS_MODEL=gpt-4o-mini

# ===== BACKGROUND PROCESSING =====
REDIS_URL=redis://localhost:6379/0
RQ_QUEUE_NAME=call-processing

# ===== STORAGE SETTINGS =====
USE_S3=false
S3_BUCKET=
S3_REGION=us-east-1

# ===== FEATURE FLAGS =====
ENABLE_AUTO_DISPOSITION=true
AUTO_APPLY_CONFIDENCE_THRESHOLD=75.0
ENABLE_REAL_TIME_TRANSCRIPTION=true
AUTO_DOWNLOAD_RECORDINGS=true
ENABLE_WEBHOOK_PROCESSING=true

# ===== PERFORMANCE SETTINGS =====
MAX_CONCURRENT_TRANSCRIPTIONS=3
TRANSCRIPTION_TIMEOUT_SECONDS=300
AI_ANALYSIS_TIMEOUT_SECONDS=60